@model DOINHE.Pages.Report.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Report.OrderId" value="@ViewData["OrderId"]" />
            
            <div class="form-group">
                <label asp-for="Report.ImgReport" class="control-label"></label>
                <input asp-for="Report.ImgReport" class="form-control" />
                <span asp-validation-for="Report.ImgReport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Description" class="control-label"></label>
                <input asp-for="Report.Description" class="form-control" />
                <span asp-validation-for="Report.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

