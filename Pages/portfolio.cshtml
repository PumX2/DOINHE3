@page
@model DOINHE.Pages.portfolioModel
@{
    var listProduct = Model.products;
    var listCategory = Model.categories;
    Layout = "_Layout";
}
<main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background">
        <div class="container position-relative">
            <h1>Portfolio</h1>
            <p>Esse dolorum voluptatum ullam est sint nemo et est ipsa porro placeat quibusdam quia assumenda numquam molestias.</p>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="index">Home</a></li>
                    <li class="current">Portfolio</li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->
    <!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">

        <div class="container">
            <div class="row">

                <!-- Search Widget -->
                <div class="search-widget widget-item col-md-6">

                    <h3 class="widget-title">Search</h3>
                    <form action="">
                        <input type="text">
                        <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                    </form>
                </div>

                <!--/Search Widget -->
                <!-- Date Range Search Widget -->
                <div class="col-md-6">
                    <div class="date-range-widget widget-item">
                        <h3 class="widget-title">Search by Date</h3>
                        <form action="">
                            <div class="row">
                                <div class="form-group col-md-5" class="col-md-5">
                                    <div class="d-flex align-items-center mb-3">
                                        <label for="start-date" class="mr-2">From: </label>
                                        <input type="date" id="start-date" name="start-date" class="form-control" style="max-width: 200px;">
                                    </div>
                                </div>
                                <div class="form-group col-md-5" class="col-md-5">
                                    <div class="d-flex align-items-center mb-3">
                                        <label for="start-date" class="mr-2">To: </label>
                                        <input type="date" id="start-date" name="start-date" class="form-control" style="max-width: 200px;">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary" title="Search by Date">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!-- End Portfolio Item -->
            </div>
            <div class="portfolio-info">
                <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach (var category in listCategory)
                    {
                        <li data-filter=".filter-@category.Id">@category.CategoryName</li>
                    }
                </ul>
            </div>

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var product in listProduct)
                {

                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@product.CategoryId">
                        <a href="portfolio-details?id=@product.Id">
                            <div class="portfolio-content h-100">
                                <img src="~/img/portfolio/app-1.jpg" class="img-fluid" alt="">
                                <div class="portfolio-info">
                                    <h4>@product.ProductName</h4>
                                    <p>@product.Description - @product.Price VND</p>
                                    <a href="~/img/portfolio/app-1.jpg" title="@product.ProductName" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                    <a href="portfolio-details?id=@product.Id" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- End Portfolio Item -->
                }
            </div><!-- End Portfolio Container -->
        </div>

    </section><!-- /Portfolio Section -->
    <!-- Blog Pagination Section -->
    <section id="blog-pagination" class="blog-pagination section">

        <div class="container">
            <div class="d-flex justify-content-center">
                <ul>
                    <li><a href="#"><i class="bi bi-chevron-left"></i></a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#" class="active">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li>...</li>
                    <li><a href="#">10</a></li>
                    <li><a href="#"><i class="bi bi-chevron-right"></i></a></li>
                </ul>
            </div>
        </div>

    </section><!-- /Blog Pagination Section -->

</main>