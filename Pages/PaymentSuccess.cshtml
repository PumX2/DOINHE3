@page
@model DOINHE.Pages.PaymentSuccessModel
@{
    Layout = "_Layout";
}
<main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background">
        <div class="container position-relative">
            <h1>Payment Successful</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="index">Home</a></li>
                    <li class="current">Payment Success</li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->
    <!-- Success Message -->
    <div class="container text-center mt-5">
        <div class="success-icon">
            <i class="fa fa-check-circle"></i>
        </div>
        <h2>Thank You for Your Purchase!</h2>
        <p>Your transaction was successful. You will receive a confirmation email shortly.</p>

        <!-- Order Summary -->
        <div class="order-summary mt-4">
            <h3>Order Summary</h3>
            <p><strong>Name:</strong>@Model.Product.ProductName</p>
            <p><strong>Time:</strong>@Model.Order.OrderDate</p>
            <p><strong>Amount:</strong>@Model.Order.Price</p>
        </div>
        <div style="margin-bottom: 21px;">
            <a class="btn btn-primary mt-4" href="Index">Go to Home</a>
            <a class="btn btn-secondary mt-4" href="OrderDetail?id=@Model.Order.Id">View Orders</a>
        </div>

    </div>
</main>
<style>
    /* Page Title Style */
    .page-title.success-background {
        background-color: #28a745;
        color: #fff;
        padding: 40px 0;
    }

    .page-title h1 {
        font-size: 2.5rem;
        margin: 0;
    }

    .breadcrumbs {
        margin-top: 10px;
    }

        .breadcrumbs ol {
            padding-left: 0;
            list-style: none;
        }

            .breadcrumbs ol li {
                display: inline;
                font-size: 1rem;
            }

                .breadcrumbs ol li a {
                    color: #fff;
                    text-decoration: none;
                }

                .breadcrumbs ol li.current {
                    color: #d4d4d4;
                    margin-left: 5px;
                }

    /* Success Icon */
    .success-icon {
        font-size: 5rem;
        color: #1e4356;
    }

    .fa-check-circle {
        font-size: 5rem;
    }

    /* Order Summary */
    .order-summary {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin: 20px 0;
        display: inline-block;
        text-align: left;
    }

        .order-summary h3 {
            margin-bottom: 15px;
        }

        .order-summary p {
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

    /* Buttons */
    .btn {
        padding: 10px 30px;
        font-size: 1.1rem;
        border-radius: 50px;
    }

    .btn-primary {
        background-color: #1e4356;
        color: #fff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1e4356;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

</style>