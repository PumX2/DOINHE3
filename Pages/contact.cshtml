@page
@model DOINHE.Pages.contactModel
@{
    Layout = "_Layout";
}
  <main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background">
      <div class="container position-relative">
        <h1>Contact</h1>
        <p>Esse dolorum voluptatum ullam est sint nemo et est ipsa porro placeat quibusdam quia assumenda numquam molestias.</p>
        <nav class="breadcrumbs">
          <ol>
            <li><a href="index">Home</a></li>
            <li class="current">Contact</li>
          </ol>
        </nav>
      </div>
    </div><!-- End Page Title -->

    <!-- Contact Section -->
    <section id="contact" class="contact section">

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
          

          <div class="col-lg-12">
                    <form action="forms/contact.php" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="500">
                        <div class="row gy-4">
                            <!-- Category selection -->
                            <div class="col-md-12">
                                <label for="category">Category</label>
                                <select id="category" name="category" class="form-control" required="">
                                    <option value="">--Select Category--</option>
                                    <option value="hotel">Phòng khách sạn</option>
                                    <option value="event">Vé sự kiện</option>
                                </select>
                            </div>

                            <!-- Time fields for hotel and event -->
                            <div class="col-md-6" id="time1-group" style="display:none;">
                                <label for="time1">Time 1</label>
                                <input type="datetime-local" id="time1" name="time1" class="form-control" required="">
                            </div>

                            <div class="col-md-6" id="time2-group" style="display:none;">
                                <label for="time2">Time 2</label>
                                <input type="datetime-local" id="time2" name="time2" class="form-control">
                            </div>

                            <!-- Name -->
                            <div class="col-md-12">
                                <label for="address">Tên</label>
                                <input type="text" id="address" name="address" class="form-control" placeholder="Address" required="">
                            </div>

                            <!-- Address -->
                            <div class="col-md-12">
                                <label for="address">Địa chỉ</label>
                                <input type="text" id="address" name="address" class="form-control" placeholder="Address" required="">
                            </div>

                            <!-- Description -->
                            <div class="col-md-12">
                                <label for="description">Mô tả</label>
                                <textarea id="description" name="description" class="form-control" rows="4" placeholder="Description" required=""></textarea>
                            </div>

                            <!-- Price -->
                            <div class="col-md-6">
                                <label for="price">Giá</label>
                                <input type="number" id="price" name="price" class="form-control" placeholder="Price" required="">
                            </div>

                            <!-- Image upload -->
                            <div class="col-md-6">
                                <label for="image">Ảnh mô tả</label>
                                <input type="file" id="image" name="image" class="form-control" required="">
                            </div>

                            <!-- Key field with special design -->
                            <div class="col-md-6" style="border: 2px solid red; padding: 10px;">
                                <label for="key">Key <span style="color: red;">(Lưu ý: Mục quan trọng)</span></label>
                                <input type="text" id="key" name="key" class="form-control" placeholder="Key" required="">
                            </div>

                            <!-- Key image upload with special design -->
                            <div class="col-md-6" style="border: 2px solid red; padding: 10px;">
                                <label for="key-image">Ảnh Key <span style="color: red;">(Lưu ý: Mục quan trọng)</span></label>
                                <input type="file" id="key-image" name="key_image" class="form-control" required="">
                            </div>

                            <!-- Submit button -->
                            <div class="col-md-12 text-center">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Your message has been sent. Thank you!</div>
                                <button type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>

                    <script>
                        document.getElementById('category').addEventListener('change', function() {
                          var category = this.value;
                          var time1Group = document.getElementById('time1-group');
                          var time2Group = document.getElementById('time2-group');

                          if (category === 'hotel') {
                            time1Group.style.display = 'block';
                            time2Group.style.display = 'block';
                          } else if (category === 'event') {
                            time1Group.style.display = 'block';
                            time2Group.style.display = 'none';
                          } else {
                            time1Group.style.display = 'none';
                            time2Group.style.display = 'none';
                          }
                        });
                    </script>

          </div><!-- End Contact Form -->

        </div>

      </div>


    </section><!-- /Contact Section -->

  </main>